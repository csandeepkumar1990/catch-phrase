<!DOCTYPE html>
<html >
  <head>
      <!-- Required meta tags -->
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
   
      <!-- Bootstrap CSS -->
      <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
      
      <!-- Optional JavaScript -->
      <!-- jQuery first, then Popper.js, then Bootstrap JS -->
      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
      <title>Guess Wat</title>
      <style>
          body {
                display: -ms-flexbox;
                display: -webkit-box;
                display: flex;
                -ms-flex-align: center;
                -ms-flex-pack: center;
                -webkit-box-align: center;
                align-items: center;
                -webkit-box-pack: center;
                justify-content: center;

                background-color: #f5f5f5;
            }
    </style>
  </head>
  <body>
        <form style="width: 1000px;">
                <div class="form-group">
              
                        <div class="col-sm-10 m-2">
                                <div class="alert alert-primary" role="alert" style="text-align: center; font-weight: bold;">
                                        Arena Name : <%= arena.title %>
                                      </div>
                            
                        </div>
                    </div>
        <div class="form-group">
              
                <div class="col-sm-10 m-2">
                    
                        <div class="alert alert-success" role="alert" style="text-align: center; font-weight: bold;">

                                    
                                <!-- Users : <%= user.id%> -->

                                <% if(arena.teams.length > 0) { %>
                                    <% arena.teams.forEach(function(team) { %>
                                                    <% if(team.teamId != '') { %>
                                                        <li class="room-item m-2" style="text-transform: uppercase">
                                                            <%= team.teamId %>: &nbsp;<%= team.username %>
                                                            <% if(team.userId != '' && team.userId == user.id) { %>
                                                                    <span>***</span>
                                                                <% }%>
                                                        </li>
                                                    <% }%>
                                        <% }); %>
                                    <% } else { %>
                                    <p class="message" style="text-align: center; padding: 0; margin: 0;">Create your first arena!</p>
                                    <% } %>
                              </div>
                </div>
            </div>
  
            <div class="form-group">
              
              <div class="col-sm-10 ">
                  
                    <div class="card border-primary" style="height:300px; overflow: scroll;">
                        <div class="card-header">Conversation</div>
                        <div class="card-body text-primary">
                            <div id="conversation"></div>
                        </div>
                      </div>
                </div>
            </div>
         
          <div class="form-group">
              <label for="message" class="col-sm-2 control-label">Message</label>
              <div class="col-sm-10">
                  <textarea class="form-control" rows="4" name="message" id="data"></textarea>
              </div>
          </div>
          
          <div class="form-group">
              <div class="col-sm-10 col-sm-offset-2">
                  <input type="button" id="datasend" class="btn btn-primary" value="Send" />
              </div>
          </div>
          
      </form>

  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/main.js"></script>
    <script>$(function(){app.catchphrase('<%= user.id %>','<%= user.username %>', '<%= arena.id %>', '<%= arena.title %>')});</script>
  </body>
</html>
